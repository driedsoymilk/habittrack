generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Cadence {
  DAILY
  WEEKLY
}

model Habit {
  id          String       @id @default(cuid())
  title       String
  description String?
  targetPer   Int          @default(1)
  cadence     Cadence      @default(WEEKLY) // ðŸ‘ˆ NEW
  archived    Boolean      @default(false)
  createdAt   DateTime     @default(now())
  entries     HabitEntry[]
}

model HabitEntry {
  id        String   @id @default(cuid())
  habitId   String
  habit     Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)
  date      DateTime
  count     Int      @default(1)
  createdAt DateTime @default(now())

  @@unique([habitId, date])
}
